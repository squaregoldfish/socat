		<property name="c3p0.timeout">1800</property>
		<property name="c3p0.max_statements">50</property>
		<property name="connection.provider_class">
			org.hibernate.connection.C3P0ConnectionProvider
		</property>
		<mapping resource="ornl/database/Author.hbm.xml" />
		<mapping resource="ornl/database/UserRoles.hbm.xml" />
		<mapping resource="ornl/database/Users.hbm.xml" />
		<mapping resource="ornl/database/Files.hbm.xml" />
		<mapping resource="ornl/database/Vessel.hbm.xml" />
